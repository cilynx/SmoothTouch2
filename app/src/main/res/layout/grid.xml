<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/set_grid_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="First Hole"
                android:textSize="35sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/grid_first_x"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:nextFocusDown="@+id/grid_first_y"
                    android:inputType="numberDecimal"
                    android:textSize="35sp" />
                <EditText
                    android:id="@+id/grid_first_y"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:nextFocusDown="@+id/grid_safe"
                    android:inputType="numberDecimal"
                    android:textSize="35sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/grid_rows_l"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rows"
                        android:textSize="35sp" />
                    <EditText
                        android:id="@+id/grid_rows"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text="2"
                        android:nextFocusDown="@+id/grid_cols"
                        android:textSize="35sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/grid_cols_l"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cols"
                        android:textSize="35sp" />
                    <EditText
                        android:id="@+id/grid_cols"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text="4"
                        android:nextFocusDown="@+id/grid_dx"
                        android:textSize="35sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/grid_dx_l"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="dx"
                        android:textSize="35sp" />
                    <EditText
                        android:id="@+id/grid_dx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text="20"
                        android:nextFocusDown="@+id/grid_dy"
                        android:textSize="35sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/grid_dy_l"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="dy"
                        android:textSize="35sp" />
                    <EditText
                        android:id="@+id/grid_dy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text="20"
                        android:textSize="35sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/grid_A_l"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Angle (A) deg"
                android:textSize="35sp" />
            <EditText
                android:id="@+id/grid_A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="40"
                android:textSize="35sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/set_grid_safe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Safe"
                        android:textSize="35sp" />
                    <EditText
                        android:id="@+id/grid_safe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:nextFocusDown="@+id/grid_depth"
                        android:textSize="35sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/set_grid_depth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Plunge"
                        android:textSize="35sp" />
                    <EditText
                        android:id="@+id/grid_depth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberSigned"
                        android:nextFocusDown="@+id/grid_rows"
                        android:textSize="35sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/grid_go"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Go!"
                    android:textSize="35sp" />
                <ToggleButton
                    android:id="@+id/grid_halt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textOff="Halt!"
                    android:textOn="Reset"
                    android:textSize="35sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/grid_diagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/grid_diagram"/>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/grid_dro_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"/>

</LinearLayout>