<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/set_bc_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Center"
                android:textSize="35sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/bc_center_x"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    android:textSize="35sp" />
                <EditText
                    android:id="@+id/bc_center_y"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    android:textSize="35sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/bc_N_l"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of Holes (N)"
                android:textSize="35sp" />

            <EditText
                android:id="@+id/bc_N"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="5"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/bc_D_l"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Circle Diameter (D)"
                android:textSize="35sp" />

            <EditText
                android:id="@+id/bc_D"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="50"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/bc_A_l"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="First Angle (A) deg"
                android:textSize="35sp" />

            <EditText
                android:id="@+id/bc_A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="35"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/bc_L_l"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arc Length (L) deg"
                android:textSize="35sp" />

            <EditText
                android:id="@+id/bc_L"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="360"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/bc_H_l"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hole Diameter (H)"
                android:textSize="35sp" />

            <EditText
                android:id="@+id/bc_H"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="10"
                android:textSize="35sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/set_bc_safe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Safe"
                        android:textSize="35sp" />
                    <EditText
                        android:id="@+id/bc_safe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textSize="35sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/set_bc_depth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Plunge"
                        android:textSize="35sp" />
                    <EditText
                        android:id="@+id/bc_depth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberSigned"
                        android:textSize="35sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/bc_go"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Go!"
                    android:textSize="35sp" />
                <ToggleButton
                    android:id="@+id/halt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textOff="Halt!"
                    android:textOn="Reset"
                    android:textSize="35sp" />
            </LinearLayout>

           <com.wolfteck.smoothtouch2.BoltCircleDiagram
               android:layout_height="wrap_content"
               android:layout_width="match_parent"
               android:id="@+id/bcDiagram" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/bolt_circle_dro_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"/>

</LinearLayout>